create database production;
show databases;
use production;
create table productiondetails (product_name char(20),id varchar(20),income int(20));
insert into productiondetails values ("ball_bearinng","ball001","100");
insert into productiondetails values ("drum","dr001","106");
insert into productiondetails values ("nut","nu001","108");
alter table productiondetails add qualitytest char(20);
